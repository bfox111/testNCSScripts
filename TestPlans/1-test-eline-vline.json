{
    "tests": [
       {
          "testName": "ELINE",
          "testDescription": "Setup ELINE between CE-1 and CE-2.  Set up VLINE on PE-6x and PE-10x. Run Y1564 test.",
          "testType": "ELINE",

          "customScripts": [
              {
                "deviceName": "PE-6x",
                "cmdFile": "VLINE",
                "scriptAttributes": {
                  "SVLAN": "50",
                  "NNI_PORT": "11",
                  "UNI_PORT": "10",
                  "SERVICE_NUM": "1",
                  "MBPS_CIR": "1000"
                }
              },
              {
                "deviceName": "PE-10x",
                "cmdFile": "VLINE",
                "scriptAttributes": {
                  "UNI_PORT": "1",
                  "SVLAN": "50",
                  "MBPS_CIR": "1000",
                  "CIRCUIT_NAME": "VLINE50",
                  "NNI_PORT": "4"
                }
              },
              {
                "deviceName": "CE-1",
                "cmdFile": "ELINE",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "SVLAN": "50",
                  "MBPS_CIR": "1000",
                  "MD_LEVEL": "5",
                  "CIRCUIT_NAME": "ELINE50",
                  "NNI_PORT": "1",
                  "LOCAL_MEP": "1",
                  "REMOTE_MEP": "2"
                }
              },
              {
                "deviceName": "CE-2",
                "cmdFile": "ELINE",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "SVLAN": "50",
                  "MBPS_CIR": "1000",
                  "CIRCUIT_NAME": "ELINE50",
                  "NNI_PORT": "1",
                  "MD_LEVEL": "5",
                  "LOCAL_MEP": "2",
                  "REMOTE_MEP": "1"
                }
              }
          ],
          "sleepTime": 5,
          "verificationCommands": {
              "PE-6x": [
                  "vlan show",
                  "port show"
              ],
              "PE-10x": [
                  "show flow"
              ],
              "CE-1": [
                  "show cfm delay",
                  "sh cfm synthetic-loss-measurement",
                  "show run config section fds"
              ],
              "CE-2": [
                  "show cfm delay",
                  "sh cfm synthetic-loss-measurement",
                  "show run config section fds"
              ]
          }
      },
        {
          "testName": "Y1564 Test",
          "testDescription": "Setup Y.1564 test between CE-1 and CE-2.  CE-2 is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "CE-2",
                "cmdFile": "ReflectTaggedAndUntagged",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "FLOW_POINT": "FP_5_ELINE50"
                }
              },
              {
                "deviceName": "CE-1",
                "cmdFile": "Y1564SetupOnceUntagged",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "BANDWIDTH_MBS": "1000",
                  "DEST_NODE": "CE-2",
                  "DEST_MAC": "SET_IN_CODE",
                  "FLOW_PT_GEN_PORT": "FP_5_ELINE50"
                }
              }
          ],
          "sleepTime": 15,
          "verificationCommands": {
               "CE-1": [
                  "sh sat test-instances "
              ],
              "CE-2": [
                  "sh sat test-instances statistics"
              ]
          }
      },
              {
          "testName": "Start Y1564 Test",
          "testDescription": "Start Y.1564 test between CE-1 and CE-2.  CE-2 is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "CE-1",
                "cmdFile": "Y1564StartUntagged",
                "scriptAttributes": {
              }
              }
          ],
          "sleepTime": 45,
          "verificationCommands": {
              "CE-2": [
                  "sh sat test-instances statistics"
              ],
              "CE-1": [
                  "sh sat test-instances test-instance genY1564Untagged statistics"
              ]
          }
      },
      {
          "testName": "Disable Y1564 ",
          "testDescription": "Disable Y.1564 test between CE-1 and CE-2.  CE-2 is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "CE-2",
                "cmdFile": "DisableReflector",
                "scriptAttributes": {
                  "UNI_PORT": "5"
              }
              },
                            {
                "deviceName": "CE-1",
                "cmdFile": "Y1564DisableUntagged",
                "scriptAttributes": {
                  "UNI_PORT": "5"
              }
              }

          ],
          "sleepTime": 1,
          "verificationCommands": {
              "CE-2": [
                  "show sat entities"
              ],
              "CE-1": [
                  "show sat entities"
              ]
          }
      },
      {
          "testName": "Delete Y1564 ",
          "testDescription": "Delete Y.1564 test between CE-1 and CE-2.  CE-2 is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "CE-2",
                "cmdFile": "RemoveReflector",
                "scriptAttributes": {
              }
              },
                            {
                "deviceName": "CE-1",
                "cmdFile": "Y1564DeleteUntagged",
                "scriptAttributes": {
              }
              }

          ],
          "sleepTime": 1,
          "verificationCommands": {
              "CE-2": [
                  "show sat entities"
              ],
              "CE-1": [
                  "show sat entities"
              ]
          }
      }
    ]
 }
