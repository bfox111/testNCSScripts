{
    "tests": [
      {
          "testName": "Stop RFC2544 ",
          "testDescription": "Stop RFC2544 test between PE-10x and PE-6x.  PE-6x is the reflector.",
          "testType": "SAT",

          "customScripts": [
            {
                "deviceName": "PE-10x",
                "cmdFile": "RFC2544Stop",
                "scriptAttributes": {
                  "UNI_PORT": "5"
              }
              }

          ],
          "sleepTime": 1,
          "verificationCommands": {
              "PE-10x": [
                  "show sat entities"
              ]
