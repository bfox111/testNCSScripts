{
    "tests": [
        {
          "testName": "Y1564 Test",
          "testDescription": "Setup Y.1564 test between PE-10x and PE-6x.  PE-6x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-6x",
                "cmdFile": "ReflectAllVlans",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "FLOW_POINT": "FP_5_EVPL700"
                }
              },
              {
                "deviceName": "PE-10x",
                "cmdFile": "Y1564SetupOnceTagged",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "BANDWIDTH_MBS": "1000",
                  "DEST_NODE": "PE-6x",
                  "DEST_MAC": "SET_IN_CODE",
                  "FLOW_PT_GEN_PORT": "FP_5_EVPL700",
		              "CVLAN": "400"
		}
              }
          ],
          "sleepTime": 15,
          "verificationCommands": {
               "PE-6x": [
                  "bench test show"
              ],
              "PE-10x": [
                  "show sat entities"
              ]
          }
      },
              {
          "testName": "Start Y1564 Test",
          "testDescription": "Start Y.1564 test between PE-10x and PE-6x.  PE-6x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-10x",
                "cmdFile": "Y1564StartTagged",
                "scriptAttributes": {
              }
              }
          ],
          "sleepTime": 45,
          "verificationCommands": {
              "PE-10x": [
                  "sh sat test-instances test-instance genY1564Tagged statistics"
              ],
              "PE-6x": [
                  "bench test show "
              ]
          }
      }
     
    ]
 }
