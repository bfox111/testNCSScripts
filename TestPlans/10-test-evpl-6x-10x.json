{
    "tests": [
       {
          "testName": "EVPL",
          "testDescription": "Setup EVPL between PE-6x and PE-10x.  Run Y1564 test.",
          "testType": "EVPL",

          "customScripts": [
             {
                "deviceName": "PE-6x",
                "cmdFile": "EVPL",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "SVLAN": "700",
                  "CVLAN": "400",
                  "MBPS_CIR": "1000",
                  "MD_LEVEL": "5",
                  "SERVICE_NUM": "4",

                  "CIRCUIT_NAME": "EVPL700",
                  "NNI_PORT": "11",
                  "LOCAL_MEP": "1",
                  "REMOTE_MEP": "2"
                }
              },
              {
                "deviceName": "PE-10x",
                "cmdFile": "EVPL",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "SVLAN": "700",
                  "CVLAN": "400",
                  "MBPS_CIR": "1000",
                  "CIRCUIT_NAME": "EVPL700",
                  "SERVICE_NUM": "4",
                  "NNI_PORT": "4",
                  "MD_LEVEL": "5",
                  "LOCAL_MEP": "2",
                  "REMOTE_MEP": "1"
                }
              }
          ],
          "sleepTime": 5,
          "verificationCommands": {
              "PE-6x": [
                  "vlan show",
                  "virtual-circuit ethernet show ",
                  "virtual-switch ethernet show",
                  "traffic-prof stand show"
              ],
              "PE-10x": [
                  "sh flow"
              ]
          }
      },
        {
          "testName": "Y1564 Test",
          "testDescription": "Setup Y.1564 test between PE-6x and PE-10x.  PE-10x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-10x",
                "cmdFile": "ReflectTaggedAndUntagged",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "FLOW_POINT": "FP_5_EVPL700"
                }
              },
              {
                "deviceName": "PE-6x",
                "cmdFile": "Y1564SetupOnceTagged",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "CVLAN": "400",
                  "BANDWIDTH_MBS": "1000",
                  "DEST_NODE": "PE-10x",
                  "DEST_MAC": "SET_IN_CODE"
                }
              }
          ],
          "sleepTime": 15,
          "verificationCommands": {
               "PE-6x": [
                  "bench test show"
              ],
              "PE-10x": [
                  "show sat test-instances",
                  "show sat entities"
              ]
          }
      },
              {
          "testName": "Start Y1564 Test",
          "testDescription": "Start Y.1564 test between PE-6x and PE-10x.  PE-10x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-6x",
                "cmdFile": "Y1564StartTagged",
                "scriptAttributes": {
              }
              }
          ],
          "sleepTime": 45,
          "verificationCommands": {
              "PE-10x": [
                  "sh sat test-instances statistics"
              ],
              "PE-6x": [
                  "bench test show name genY1564Tagged statistics"
              ]
          }
      },
      {
          "testName": "Disable Y1564 ",
          "testDescription": "Disable Y.1564 test between PE-6x and PE-10x.  PE-10x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-10x",
                "cmdFile": "DisableReflector",
                "scriptAttributes": {
                  "UNI_PORT": "5"
              }
              },
                            {
                "deviceName": "PE-6x",
                "cmdFile": "Y1564DisableTagged",
                "scriptAttributes": {
                  "UNI_PORT": "5"
              }
              }

          ],
          "sleepTime": 1,
          "verificationCommands": {
              "PE-10x": [
                  "show sat test-instances",
                  "show sat entities"
                  
              ],
              "PE-6x": [
                  "bench test show"
              ]
          }
      },
      {
          "testName": "Delete Y1564 ",
          "testDescription": "Delete Y.1564 test between PE-6x and PE-10x.  PE-10x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-10x",
                "cmdFile": "RemoveReflector",
                "scriptAttributes": {
              }
              },
                            {
                "deviceName": "PE-6x",
                "cmdFile": "Y1564DeleteTagged",
                "scriptAttributes": {
              }
              }

          ],
          "sleepTime": 1,
          "verificationCommands": {
              "PE-10x": [
                  "show sat entities"
              ],
              "PE-6x": [
                  "bench test show"
              ]
          }
      }
    ]
 }
