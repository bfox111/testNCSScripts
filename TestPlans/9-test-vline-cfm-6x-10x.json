{
    "tests": [
       {
          "testName": "VLINE-CFM",
          "testDescription": "Setup VLINE with CFM between PE-6x and PE-10x.  Run Y1564 test. PE-6x is the reflector.",
          "testType": "VLINE-CFM",

          "customScripts": [
              {
                "deviceName": "PE-6x",
                "cmdFile": "VLINEwithCFM",
                "scriptAttributes": {
                  "SVLAN": "88",
                  "NNI_PORT": "11",
                  "UNI_PORT": "5",
		              "CIRCUIT_NAME": "VLINE88",
                  "SERVICE_NUM": "1",
                  "MBPS_CIR": "1000",
                  "MD_LEVEL": "3",
                  "LOCAL_MEP": "1",
                  "REMOTE_MEP": "2"
                }
              },
              {
                "deviceName": "PE-10x",
                "cmdFile": "VLINEwithCFM",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "SVLAN": "88",
                  "MBPS_CIR": "1000",
                  "CIRCUIT_NAME": "VLINE88",
                  "SERVICE_NUM": "1",
                  "NNI_PORT": "4",
                  "MD_LEVEL": "3",
                  "LOCAL_MEP": "2",
                  "REMOTE_MEP": "1"

                }
              }
	  ],
	  "sleepTime": 15,
          "verificationCommands": {
              "PE-6x": [
                  "vlan show",
                  "cfm delay show",
                  "cfm servi show"
              ],
              "PE-10x": [
                  "show flow",
                  "show cfm delay "
              ]
          }
      },
        {
          "testName": "Y1564 Test",
          "testDescription": "Setup Y.1564 test between PE-6x and PE-10x.  PE-6x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-6x",
                "cmdFile": "ReflectAllVlans",
                "scriptAttributes": {
                  "UNI_PORT": "5"
                }
              },
              {
                "deviceName": "PE-10x",
                "cmdFile": "Y1564SetupOnceTagged",
                "scriptAttributes": {
                  "UNI_PORT": "5",
                  "BANDWIDTH_MBS": "1000",
                  "DEST_NODE": "PE-6x",
                  "DEST_MAC": "SET_IN_CODE",
		              "CVLAN": "88",
                  "FLOW_PT_GEN_PORT": "FP_5_VLINE88"
                }
              }
          ],
          "sleepTime": 15,
          "verificationCommands": {
               "PE-6x": [
                  "bench test show",
                  "bench reflector show "
              ],
              "PE-10x": [
                  "show sat entities",
                  "show sat test-instances"
              ]
          }
      },
              {
          "testName": "Start Y1564 Test",
          "testDescription": "Start Y.1564 test between PE-6x and PE-10x.  PE-6x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-10x",
                "cmdFile": "Y1564StartTagged",
                "scriptAttributes": {
              }
              }
          ],
          "sleepTime": 45,
          "verificationCommands": {
              "PE-6x": [
                  "bench reflector show name REFLECT statistics"
              ],
              "PE-10x": [
                  "sh sat test-instances test-instance genY1564Tagged statistics"
              ]
          }
      },
      {
          "testName": "Disable Y1564 ",
          "testDescription": "Disable Y.1564 test between PE-6x and PE-10x.  PE-x6x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-10x",
                "cmdFile": "DisableY1564Tagged",
                "scriptAttributes": {
                  "UNI_PORT": "5"
              }
              }

          ],
          "sleepTime": 1,
          "verificationCommands": {
              "PE-6x": [
                  "bench reflector show"
              ],
              "PE-10x": [
                  "show sat entities",
                  "show sat test-instances"
              ]
          }
      },
      {
          "testName": "Delete Y1564 ",
          "testDescription": "Delete Y.1564 test between PE-6x and PE-10x.  PE-6x is the reflector.",
          "testType": "SAT",

          "customScripts": [
              {
                "deviceName": "PE-6x",
                "cmdFile": "DeleteAllVlansReflector",
                "scriptAttributes": {
              }
              },
                            {
                "deviceName": "PE-10x",
                "cmdFile": "Y1564DeleteTagged",
                "scriptAttributes": {
              }
              }

          ],
          "sleepTime": 3,
          "verificationCommands": {
              "PE-6x": [
                  "bench test show",
                  "bench reflector show "
              ],
              "PE-10x": [
                  "show sat entities",
                  "show sat test-instances"
              ]
          }
      }
    ]
 }
